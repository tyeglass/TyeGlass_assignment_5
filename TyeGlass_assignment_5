steps = 0 #keeps track of how many steps it takes to reach 1
print('=== Challenge 1: Collatz Conjecture ===')
starting_number = int(input('Enter starting number: '))
print('Sequence:', end=' ')
print(starting_number, end=' ')
while starting_number != 1: #keep looping until the number becomes 1
    if starting_number % 2 == 0:
        starting_number = starting_number // 2
    else: #if the number is odd, multiply by 3 and add 1
        starting_number = (3 * starting_number) + 1
    print(starting_number, end=' ') #Print the next number in the sequence
    steps += 1
print(f'\nSteps: {steps}')
print()
print('=== Challenge 2: Prime Number Checker ===')
user_number = int(input('Enter a number: '))#get a number from the user
print(f'Testing divisors from 2 to {user_number - 1}...')
is_prime = True #Assume the number is prime until its proven otherwise
for i in range(2, user_number): #test all numbers from 2 up to one less than the user's number
    if user_number % i == 0:
        is_prime = False #Mark it as not prime
        divisor = i
        break #Stop checking since we already found a divisor

if is_prime:
    print(user_number, "is prime!")
else: #if a divisor was found
    print(user_number, "is not prime (divisible by", divisor, ")")
print('=== Challenge 3: Multiplication Table ===')
print("Multiplication Table:")
print("\t", end="")  #add space before the top row
for col in range(1, 11):  #print the top header row (1â€“10)
    print(col, end="\t")
print()  #move to the next line
for row in range(1, 11):  #loop through rows
    print(row, end="\t")  #print the row label
    for col in range(1, 11):  
        product = row * col 
        print(product, end="\t")  #print each product separated by the tab thing
    print()  #move to the next line after each row
